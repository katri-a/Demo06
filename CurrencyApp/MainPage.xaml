<Page
    x:Class="CurrencyApp.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CurrencyApp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" FocusVisualPrimaryBrush="#FF0C7ECD">
        <TextBlock x:Name="markatTextBlock" HorizontalAlignment="Left" 
                   Margin="288,243,0,0" TextWrapping="Wrap" 
                   Text="Markat" VerticalAlignment="Top" 
                   Height="97" Width="187" FontSize="50"
                   TextAlignment="Center" SelectionChanged="markatTextBlock_SelectionChanged"/>
        <TextBlock x:Name="eurotTextBlock" 
                   HorizontalAlignment="Left" 
                   Margin="790,243,0,0" TextWrapping="Wrap" 
                   Text="Eurot" VerticalAlignment="Top" 
                   Height="97" Width="187" FontSize="50"
                   TextAlignment="Center"/>
        <TextBlock x:Name="textBlock" HorizontalAlignment="Left" Margin="344,376,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top"/>
        <TextBlock x:Name="textBlock1" HorizontalAlignment="Left" Margin="858,380,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" RenderTransformOrigin="0.71,-2.4"/>

    </Grid>
</Page>
